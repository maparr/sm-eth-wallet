{
  "name": "minimal-evm-wallet",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal EVM Wallet - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=@minimal-wallet/core && npm install --workspace=@minimal-wallet/cli && npm install --workspace=@minimal-wallet/frontend",
    "setup": "npm run install:all && npm run build --workspace=@minimal-wallet/core && npm run build --workspace=@minimal-wallet/cli",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:frontend": "npm run build --workspace=@minimal-wallet/frontend",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "core": "npm run dev --workspace=@minimal-wallet/core",
    "cli": "npm run dev --workspace=@minimal-wallet/cli",
    "frontend": "npm run dev --workspace=@minimal-wallet/frontend",
    "wallet": "npm run build --workspace=@minimal-wallet/cli && node packages/cli/dist/inquirer-cli.js",
    "cli:line": "npm run build --workspace=@minimal-wallet/cli && node packages/cli/dist/inquirer-cli.js",
    "cli:run": "npm run build --workspace=@minimal-wallet/cli && node packages/cli/dist/inquirer-cli.js",
    "cli:quick": "node packages/cli/dist/inquirer-cli.js"
  },
  "devDependencies": {
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.8.1"
}